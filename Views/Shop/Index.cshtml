                                <p>
                                    <input type="text" id="amount" readonly="">
                                </p>
                            </div>
                            <input id="maxPriceInput" form="filter-form" type="hidden" name="MaxPrice" value="@ViewBag.MaxPrice" />
                            <input id="minPriceInput" form="filter-form" type="hidden" name="MinPrice" value="@ViewBag.MinPrice" />

                        </div>
                    </div>
                    <!-- Size -->
                    <div class="single-block">
                        <h3 class="sidebar-title">Authors</h3>
                        <ul class="sidebar-menu--shop menu-type-2">
                            @foreach (var item in Model.Authors)
                            {
                                <li>
                                    <div class="form-check">
                                        <input form="filter-form" class="form-check-input" name="authorId" type="checkbox" value="@item.Id" id="authorId-@item.Id" @(ViewBag.AuthorIds.Contains(item.Id) ? "checked" : "")>
