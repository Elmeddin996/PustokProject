                <div class="shop-product-wrap grid with-pagination row space-db--30 shop-border">

                    @foreach (var book in Model.paginatedList.Items)
                    {
                        <div class="col-lg-4 col-sm-6">
                            <div class="product-card">
                                <div class="product-grid-content">
                                    <div class="product-header">
                                        <a href="#" class="author">
                                            @book.Author.FullName
                                        </a>
                                        <h3><a href="product-details.html">@book.Name</a></h3>
                                    </div>
                                    <div class="product-card--body">
                                        <div class="card-image">
                                            <img src="~/uploads/books/@book.BookImages.FirstOrDefault(x=>x.PosterStatus==true)?.ImageName" alt="">
                                            <div class="hover-contents">
                                                <a href="product-details.html" class="hover-image">
                                                    <img src="~/uploads/books/@book.BookImages.FirstOrDefault(x=>x.PosterStatus==false)?.ImageName" alt="">
                                                </a>
                                                <div class="hover-btns">
                                                    <a href="cart.html" class="single-btn">
                                                        <i class="fas fa-shopping-basket"></i>
                                                    </a>
                                                    <a href="wishlist.html" class="single-btn">
                                                        <i class="fas fa-heart"></i>
                                                    </a>
                                                    <a href="compare.html" class="single-btn">
                                                        <i class="fas fa-random"></i>
                                                    </a>
                                                    <a href="#" data-toggle="modal" data-target="#quickModal"
                                                       class="single-btn">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="price-block">
                                            @if (book.DiscountPercent > 0)
                                            {
                                                <span class="price">£@((book.SalePrice * (100 - book.DiscountPercent) / 100).ToString("0.00"))</span>
                                                <del class="price-old">£@book.SalePrice.ToString("0.00")</del>
                                                <span class="price-discount">@book.DiscountPercent.ToString("0.##")%</span>
                                            }
                                            else
                                            {
                                                <span class="price">£@book.SalePrice.ToString("0.00")</span>
                                            }

                                        </div>
                                    </div>
                                </div>
                                <div class="product-list-content">
                                    <div class="card-image">
                                        <img src="~/uploads/books/@book.BookImages.FirstOrDefault(x=>x.PosterStatus==true)?.ImageName" alt="">
                                    </div>
                                    <div class="product-card--body">
                                        <div class="product-header">
                                            <a href="#" class="author">
                                                @book.Author.FullName
                                            </a>
                                            <h3>
                                                <a href="product-details.html" tabindex="0">
                                                    @book.Name
                                                </a>
                                            </h3>
                                        </div>
                                        <article>
                                            <h2 class="sr-only">Card List Article</h2>
                                            <p>
                                                More room to move. With 80GB or 160GB of storage and up to 40 hours
                                                of battery life, the new iPod classic lets you enjoy
                                                up to 40,000 songs or..
                                            </p>
                                        </article>
                                        <div class="price-block">
                                            @if (book.DiscountPercent > 0)
                                            {
                                                <span class="price">£@((book.SalePrice * (100 - book.DiscountPercent) / 100).ToString("0.00"))</span>
                                                <del class="price-old">£@book.SalePrice.ToString("0.00")</del>
                                                <span class="price-discount">@book.DiscountPercent.ToString("0.##")%</span>
                                            }
                                            else
                                            {
                                                <span class="price">£@book.SalePrice.ToString("0.00")</span>
                                            }
                                        </div>
                                        <div class="rating-block">
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star star_on"></span>
                                            <span class="fas fa-star "></span>
                                        </div>
                                        <div class="btn-block">
                                            <a href="#" class="btn btn-outlined">Add To Cart</a>
                                            <a href="#" class="card-link">
                                                <i class="fas fa-heart"></i> Add To
                                                Wishlist
                                            </a>
                                            <a href="#" class="card-link">
                                                <i class="fas fa-random"></i> Add To
                                                Cart
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- Pagination Block -->
                <div class="row pt--30">
                    <div class="col-md-12">
                        <div class="pagination-block">
                            <nav aria-label="Page navigation example">
                                <ul class="pagination-btns flex-center">
                                    <li class="page-item @(Model.paginatedList.HasPrev?"":"disabled")">
                                        <a class="page-link" asp-action="index" asp-route-page="@(Model.paginatedList.PageIndex-1)" tabindex="-1">Previous</a>
                                    </li>
                                    @for (int i = 1; i <= Model.paginatedList.TotalPage; i++)
                                    {
                                        <li class="page-item @(i==Model.paginatedList.PageIndex?"active":"")"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                                    }
                                    <li class="page-item @(Model.paginatedList.HasNext?"":"disabled")">
                                        <a class="page-link" asp-action="index" asp-route-page="@(Model.paginatedList.PageIndex+1)">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
